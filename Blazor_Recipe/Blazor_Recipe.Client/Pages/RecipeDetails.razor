@page "/details/{RecipeId:int}/{RecipeName}"
@using Blazor_Recipe.Client.Components

<PageTitle>Details - @RecipeName</PageTitle>

    <MudGrid Justify="Justify.Center">
        <MudItem xs="6">
            <RecipeImage RecipeId="@RecipeId"
                         RecipeName="@RecipeName"
                         RenderMode="@nameof(RenderMode.InteractiveWebAssembly)"
                         @rendermode="RenderMode.InteractiveWebAssembly" />
        </MudItem>
        <MudItem xs="6">

            <RecipeImage RecipeId="@RecipeId"
                         RecipeName="@RecipeName"
                         RenderMode="@nameof(RenderMode.InteractiveServer)"
                         @rendermode="RenderMode.InteractiveServer" />
        </MudItem>

        <MudItem xs="6">
            <RecipeImage RecipeId="@RecipeId"
                         RecipeName="@RecipeName"
                         RenderMode="StaticServerRendering" />
        </MudItem>

        <MudItem xs="6">
            <MudLink Href="@($"/details_auto/{RecipeId}/{RecipeName}")" Underline="Underline.Hover">
                <MudText Typo="Typo.h4" Align="Align.Center">InteractiveAuto</MudText>
            </MudLink>
        </MudItem>
    </MudGrid>

    @code {
    [Parameter]
    public string RecipeName { get; set; }
    [Parameter]
    public int RecipeId { get; set; }


    protected override void OnParametersSet()
    {
        ArgumentNullException.ThrowIfNull(RecipeName);
        ArgumentNullException.ThrowIfNull(RecipeId);

    }
}
