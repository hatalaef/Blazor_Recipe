@page "/details_wasm/{RecipeId:int}/{RecipeName}"
@using Blazor_Recipe.Client.Components
@attribute [RenderModeInteractiveWebAssembly]

<PageTitle>WASM Details</PageTitle>



<RecipeImage RecipeId="@RecipeId" RecipeName="@RecipeName" RenderMode="@nameof(RenderMode.InteractiveWebAssembly)" />


    @code {
    [Parameter]
    public string RecipeName { get; set; }
    [Parameter]
    public int RecipeId { get; set; }


    protected override void OnParametersSet()
    {
        ArgumentNullException.ThrowIfNull(RecipeName);
        ArgumentNullException.ThrowIfNull(RecipeId);

    }
}
