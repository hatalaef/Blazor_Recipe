@page "/details_server/{RecipeId:int}/{RecipeName}"
@using Blazor_Recipe.Client.Components
@attribute [RenderModeInteractiveServer]

<PageTitle>Server Details</PageTitle>



<RecipeImage RecipeId="@RecipeId" RecipeName="@RecipeName" RenderMode="@nameof(RenderMode.InteractiveServer)" />

    @code {
    [Parameter]
    public string RecipeName { get; set; }
    [Parameter]
    public int RecipeId { get; set; }


    protected override void OnParametersSet()
    {
        ArgumentNullException.ThrowIfNull(RecipeName);
        ArgumentNullException.ThrowIfNull(RecipeId);

    }
}
